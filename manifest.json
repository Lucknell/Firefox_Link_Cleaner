{
    "manifest_version": 2,
    "name": "Link Cleaner",
    "description": "A simple addon to clean links of redirects",
    "version": "1.0.1",
    "permissions": [
        "contextMenus",
        "tabs",
        "storage"
    ],
    "background": {
        "scripts": [
            "linkcleaner.js"
        ]
    },
    "options_ui": {
        "page": "options.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "@linkCleaner-lucknell"
        }
    },
    "icons": {
        "125": "button/icon.png"
    },
    "browser_action": {
        "default_icon": {
            "125": "button/icon.png"
        },
        "default_title": "Link Cleaner"
    }
}